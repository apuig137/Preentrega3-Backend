{{#if products}}
    {{#each products}}
        <div>
            <p>{{this.title}} ${{this.price}}</p>
            <form id="addProductToCart" data-pid="{{this._id}}" action="/api/carts/addProductToCart/" method="POST">
                <button type="submit">Agregar al carrito</button>
            </form>

            <form action="/api/products/deleteproduct/{{this._id}}" method="DELETE">
                <button type="submit">Eliminar producto</button>
            </form>
        </div>
    {{/each}}
{{else}}
    <p>No hay productos</p>
{{/if}}

<div>
    {{#if productsPages.hasPrevPage}}
        <a href="/api/products?page={{productsPages.prevPage}}">Anterior</a>
    {{/if}}
    {{#if productsPages.hasNextPage}}
        <a href="/api/products?page={{productsPages.nextPage}}">Siguiente</a>
    {{/if}}
</div>
<script src="/js/addProductToCart.js"></script>
